<%- include("partials/header.ejs") %>
<body>
<div class="post-frame">
    <div class="blog-text">
        <h4 class="blog-title"><%= blogPost.title %></h4>
        <p><%- blogPost.content %></p>
        <br>
        <% if (blogPost.date) { %>
            <p class="blog-timestamp">Posted on: <%= blogPost.date.toLocaleString('en-GB') %></p>
        <% } else { %>
            <% const date = blogPost._id.getTimestamp() %>
            <p class="blog-timestamp">Posted on: <%= date.toLocaleString('en-GB') %></p>
        <% } %>
    </div>
</div>
</body>
